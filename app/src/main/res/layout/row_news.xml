<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardMaxElevation="6dp"
    card_view:contentPadding="4dp"
    app:cardCornerRadius="6dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:layout_goneMarginBottom="1dp">

   <RelativeLayout
       android:padding="8dp"
       android:layout_width="match_parent"
       android:layout_height="200dp">

       <TextView
           android:textColor="@android:color/black"
           android:fontFamily="sans-serif-thin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/date_new"
           tools:text="20/07"
           android:textSize="12sp"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true"
           android:layout_marginTop="8dp"/>

       <TextView
           android:textColor="@android:color/black"
           android:fontFamily="sans-serif-thin"
           android:textSize="12sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/author_new"
           android:maxLength="20"
           tools:text="By Sebastian Murphy-bates For Mailonline"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="8dp"
           tools:ignore="RelativeOverlap" />

       <TextView
           android:fontFamily="sans-serif-thin"
           android:maxLines="3"
           android:ellipsize="end"
           android:layout_toLeftOf="@id/image_new"
           android:id="@+id/title_new"
           android:layout_marginRight="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="Mais 130 venezuelanos são transferidos para abrigos em 4 capitais"
           android:layout_below="@id/date_new"
           android:layout_alignParentStart="true"
           android:layout_marginTop="12dp"
           android:textSize="18sp"
           android:textStyle="bold"
           android:textColor="@android:color/black"/>

       <ImageView
           android:id="@+id/image_new"
           android:layout_width="120dp"
           android:layout_height="70dp"
           tools:src="@drawable/tools_image"
           android:layout_alignParentEnd="true"
           android:layout_below="@id/author_new"
           android:layout_marginTop="12dp"/>

       <TextView
           android:textColor="@android:color/black"
           android:fontFamily="sans-serif-thin"
           android:textSize="15sp"
           android:id="@+id/description_new"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:text="Imigrantes em Boa Vista (RR)  passaram por exames médicos e tiveram documentação passaram por exames médicos e tiveram documentação regularizada"
           android:layout_below="@id/image_new"
           android:layout_marginTop="12dp"
           android:maxLines="3"
           android:ellipsize="end"
           />

   </RelativeLayout>

</android.support.v7.widget.CardView>